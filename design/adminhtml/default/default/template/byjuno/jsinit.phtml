    Validation.add('validate-comma-separated-numbers', 'Please enter a valid comma-separated numbers.', function(numbers) {
        if (numbers == "") {
            return true;
        }
        var re = /^[0-9]+(,[0-9]+)*$/;
        return re.test(numbers);
    });
</script>