<?xml version="1.0"?>
<config>
    <tabs>
        <byjuno translate="label" module="byjuno">
            <label>Byjuno (1.0.0)</label>
            <sort_order>301</sort_order>
        </byjuno>
    </tabs>
    <sections>
        <payment translate="label" module="byjuno">
            <groups>
                <cdp translate="label">
                    <label>Byjuno checkout Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>

                        <byjuno_invoice_heading translate="label">
                            <label>Byjuno invoice settings</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </byjuno_invoice_heading>
                        <title_invoice translate="label">
                            <label>Title for byjuno invoice</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_invoice>
                        <byjuno_invoice_payments translate="label">
                            <label>Invoice payment methods</label>
                            <frontend_type>Checkboxes</frontend_type>
                            <sort_order>4</sort_order>
                            <frontend_model>byjuno/catalog_form_renderer_config_byjunoInvoiceRange</frontend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </byjuno_invoice_payments>
                        <byjuno_invoice_toc_link translate="label">
                            <label>Link to invoice terms and conditions</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </byjuno_invoice_toc_link>
                        <byjuno_invoice_toc_string translate="label">
                            <label>*Localization* Terms &amp; conditions message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </byjuno_invoice_toc_string>
                        <byjuno_invoice_payment_message translate="label">
                            <label>*Localization* Please select payment plan message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </byjuno_invoice_payment_message>
                        <byjuno_invoice_fail_message translate="label">
                            <label>*Localization* Payment failed message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </byjuno_invoice_fail_message>



                        <byjuno_installment_heading translate="label">
                            <label>Byjuno installment settings</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </byjuno_installment_heading>
                        <title_installment translate="label">
                            <label>Title for byjuno installment</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_installment>
                        <byjuno_installment_payments translate="label">
                            <label>Installment payment methods</label>
                            <frontend_type>Checkboxes</frontend_type>
                            <sort_order>13</sort_order>
                            <frontend_model>byjuno/catalog_form_renderer_config_byjunoInstallmentRange</frontend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </byjuno_installment_payments>
                        <byjuno_installment_toc_link translate="label">
                            <label>Link to installment terms and conditions</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </byjuno_installment_toc_link>
                        <byjuno_installment_toc_string translate="label">
                            <label>*Localization* Terms &amp; conditions message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </byjuno_installment_toc_string>
                        <byjuno_installment_payment_message translate="label">
                            <label>*Localization* Please select payment plan message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>16</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </byjuno_installment_payment_message>
                        <byjuno_installment_fail_message translate="label">
                            <label>*Localization* Payment failed message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>17</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </byjuno_installment_fail_message>


                        <byjuno_global_heading translate="label">
                            <label>Byjuno global settings</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </byjuno_global_heading>
                        <order_status translate="label">
                            <label>New Order Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order_status>
                        <success_order_status translate="label">
                            <label>Success Order Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </success_order_status>
                        <fail_order_status translate="label">
                            <label>Fail Order Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </fail_order_status>
                        <businesstobusiness translate="label comment">
                            <label>Enable B2B check</label>
                            <comment>B2B integration allow to to do credit check if customer provide company
                                credentials
                            </comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>50</sort_order>
                            <source_model>byjuno/source_Activate</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </businesstobusiness>
                        <currentmode translate="label comment">
                            <label>Mode</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>60</sort_order>
                            <source_model>byjuno/source_Modes</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </currentmode>
                        <clientid translate="label">
                            <label>Client ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clientid>
                        <userid translate="label">
                            <label>User ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </userid>
                        <password translate="label">
                            <label>Password</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </password>
                        <mail translate="label">
                            <label>Technical Contact (E-mail)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mail>
                        <copy_email translate="label">
                            <label>Automatically send invoice copy to byjuno</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>101</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </copy_email>
                        <minamout translate="label">
                            <label>Mininmal amount for checkout</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </minamout>
                        <maxamout translate="label">
                            <label>Maximal amount for checkout</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </maxamout>
                        <timeout translate="label">
                            <label>Connection timeout to Byjuno CDP server in seconds</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry validate-digits</validate>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </timeout>
                    </fields>
                </cdp>
            </groups>
        </payment>
    </sections>
</config>