<?xml version="1.0"?>
<config>
    <modules>
        <Byjuno_Cdp>
            <version>4.0.0</version>
        </Byjuno_Cdp>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Byjuno_Cdp before="Mage_Adminhtml">Byjuno_Cdp_Adminhtml</Byjuno_Cdp>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <byjuno translate="title" module="byjuno">
                <title>Byjuno</title>
                <sort_order>100</sort_order>
                <children>
                    <set_time>
                        <title>Request log</title>
                        <action>adminhtml/byjunolog/log</action>
                    </set_time>
                </children>
            </byjuno>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <byjuno translate="title" module="byjuno">
                            <title>Byjuno</title>
                            <sort_order>0</sort_order>
                            <children>
                                <set_time>
                                    <title>Log</title>
                                    <sort_order>1</sort_order>
                                </set_time>
                            </children>
                        </byjuno>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <byjuno translate="title" module="byjuno">
                                            <title>Byjuno</title>
                                            <sort_order>50</sort_order>
                                        </byjuno>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <Byjuno module="Byjuno_Cdp">
                    <file>byjuno.xml</file>
                </Byjuno>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <mymodule>
                    <file>byjuno_frontend.xml</file> <!-- Our layout file name-->
                </mymodule>
            </updates>
        </layout>
    </frontend>
    <global>
        <fieldsets>
            <sales_convert_quote>
                <byjuno_status>
                    <to_order>*</to_order>
                </byjuno_status>
                <byjuno_credit_rating>
                    <to_order>*</to_order>
                </byjuno_credit_rating>
                <byjuno_credit_level>
                    <to_order>*</to_order>
                </byjuno_credit_level>
            </sales_convert_quote>
        </fieldsets>
        <helpers>
            <byjuno><class>Byjuno_Cdp_Helper</class></byjuno>
        </helpers>
        <blocks>
            <byjuno>
                <class>Byjuno_Cdp_Block</class>
            </byjuno>
        </blocks>
        <models>
            <byjuno>
                <class>Byjuno_Cdp_Model</class>
                <resourceModel>byjuno_mysql4</resourceModel>
            </byjuno>
            <byjuno_mysql4>
                <class>Byjuno_Cdp_Model_Mysql4</class>
                <entities>
                    <byjuno>
                        <table>byjuno</table>
                    </byjuno>
                </entities>
            </byjuno_mysql4>
            <!--<checkout> Mage_Checkout_Model_Type_Onepage
                <rewrite>
                    <type_onepage>Byjuno_Cdp_Model_Onepage</type_onepage>
                </rewrite>
            </checkout>-->
        </models>
        <events>
            <controller_action_predispatch>
                <observers>
                    <byjuno_amscheckoutfront_onepage>
                        <type>singleton</type>
                        <class>byjuno/observer</class>
                        <method>hookToControllerActionPreDispatch</method>
                    </byjuno_amscheckoutfront_onepage>
                </observers>
            </controller_action_predispatch>
			<controller_action_predispatch_checkout_onepage_saveBilling>
				<observers>
					<auto_register_shipping>
						<type>singleton</type>
						<class>byjuno/observer</class>
						<method>checkout_controller_onepage_save_billing_method</method>
					</auto_register_shipping>
				</observers>
			</controller_action_predispatch_checkout_onepage_saveBilling>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <byjuno_after_checkout_process>
                        <type>singleton</type>
                        <class>byjuno/observer</class>
                        <method>checkout_controller_onepage_save_shipping_method</method>
                    </byjuno_after_checkout_process>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <payment_method_is_active>
                <observers>
                    <byjuno_before_load_payment_method>
                        <type>singleton</type>
                        <class>byjuno/observer</class>
                        <method>checkandcall</method>
                    </byjuno_before_load_payment_method>
                </observers>
            </payment_method_is_active>
            <checkout_onepage_controller_success_action>
                <observers>
                    <byjuno_after_checkout_process>
                        <type>singleton</type>
                        <class>byjuno/observer</class>
                        <method>sales_order_payment_place_end</method>
                    </byjuno_after_checkout_process>
                </observers>
            </checkout_onepage_controller_success_action>
        </events>
        <resources>
            <byjuno_setup>
                <setup>
                    <module>Byjuno_Cdp</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </byjuno_setup>
        </resources>
    </global>
    <default>
        <byjuno>
            <api>
                <currentmode>test</currentmode>
                <minamout>10</minamout>
                <timeout>30</timeout>
                <tmxenabled>disable</tmxenabled>
                <businesstobusiness>disable</businesstobusiness>
            </api>
            <advancedcall>
                <activation>checkout,onepage
onestepcheckout,index
onestepcheckout,onepage
PostFinanceCw,onepage
PostFinanceCw,process
SaferpayCw,onepage
SaferpayCw,process
DatatransCw,onepage
DatatransCw,process</activation>
            </advancedcall>
        </byjuno>
    </default>
</config>
